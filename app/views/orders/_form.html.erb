<div class='container'>
<div class='row pt-3'>
  <div class='col-8'>
    <h2 class='text-center'> Оформлення заказу</h2>
    <%= render 'shared/errors', object: @order %>
    <%= form_with model: @order, data: {turbo: false }  do |form| %>

     <div>
      <%= form.label :email, class:'form-label' %><br>
     <%= form.email_field :email, value: current_user.email, class:'form-control' %>
    </div>
    
    <div>
      <%= form.label :number, class:'form-label' %><br>
      <%= form.telephone_field :number, class:'form-control'%>
    </div>

       <div>
      <%= form.label :address, class:'form-label' %><br>
      <%= form.telephone_field :address, class:'form-control'%>
    </div>

    <div>
      <%= form.label :description, class:'form-label' %><br>
      <%= form.text_area :description, class:'form-control'%>
    </div>

      <%= form.label :get_category, class:'form-label' %>
      <%= form.select :pay_type, Order::PAYMENT_TYPES %>
    <div>
      <%= form.submit "Купить",class:'btn btn-dark'%>
    </div>
  <% end %>
  </div>
  <div class='col-4'>
    <h2 class=''>Корзина <span class="badge rounded-pill text-bg-success"><%= @cart.line_items.count%></span></h2>
    <%= render 'carts/for_order' %>
  </div>
</div>
</div>