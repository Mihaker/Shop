<ul class="list-group">
  <% @cart.line_items.each do |item| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= item.quantity %> &times; <%= item.product.name %></div>
      </div>
    <span class="badge text-bg-success rounded-pill"><%= number_to_currency(item.total_price, precision: 2, unit: 'UAH ') %></span>
    </li>
  <% end %>
</ul>

<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between">
    <span>Всього (UAH)</span>
    <strong><%= number_to_currency(@cart.total_price, unit: '')%></strong></li>
</ul>

<form class="card">
  <div class="input-group">
    <input type="text" class="form-control" placeholder="Promo code">
    <button type="submit" class="btn btn-success">Redeem</button>
  </div>
</form>